<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title>Reevoo Build Monitor</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <link rel="stylesheet" href="stylesheets/screen.css" type="text/css" media="screen" charset="utf-8" />
  <script type="text/javascript" charset="utf-8" src="/scripts/jquery-1.3.2.min.js"></script>
  <script type="text/javascript" charset="utf-8" src="/scripts/soundmanager2.js"></script>
  <script type="text/javascript" charset="utf-8">
    setInterval(function() {
      $("#status").load('/status');
    }, 60000);
  </script>
  <script type="text/javascript" charset="utf-8">
    var moo_good, moo_bad;
    soundManager.onload = function() {
      moo_good = soundManager.createSound({id: 'moo_good', url: "/sounds/moo_good.mp3",volume: 50 });
      moo_bad = soundManager.createSound({id: 'moo_bad', url: "/sounds/moo_bad.mp3",volume: 50 });
    }

    var last_bad_count = 0;
    function status_update(bad_count){
      if(bad_count > last_bad_count){ moo_bad && moo_bad.play(); }
      if(bad_count < last_bad_count){ moo_good && moo_good.play(); }
      last_bad_count = bad_count;
    }
  </script>
</head>

<body>
<div id="status">
  <%= status %>
</div>

</body>
</html>
